{
  "name": "Quick cookie eraser",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Quickly delete cookies of the current tab domain",
  "icons": {
    "16": "resources/icon_16.png",
    "48": "resources/icon_48.png",
    "128": "resources/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "resources/icon_19.png",
      "38": "resources/icon_38.png"
    }
  },
  "background": {
    "scripts": ["uri_parser.js", "eraser.js"]
  },
  "permissions": [
    "cookies",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "resources/icon_48.png"
  ]
}
